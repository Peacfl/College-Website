<!DOCTYPE html>
<html lang="en">

<head>
    <!--head must remain the same, just copy the head-->

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap"
        rel="stylesheet">


    <!--bootstrap css-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!--custom css-->
    <link rel="stylesheet" href="home.css">

    <title>College</title>
</head>

<body>
     <!--header starts here-->
    <%- include('./header.ejs') %>
    <!--header ends here-->

    <section id="hero">
        <div class="text-center">
            <h1 class="home-title">GET READY</h1>
            <div class="col-lg-9 mx-auto my-3">
                <h2 class="home-title">TO IGNITE YOUR POTENTIAL</h2>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="hero-button btn btn-primary btn-lg px-4 gap-3">Find Your
                        Program</button>
                    <button type="button" class="hero-button btn btn-primary btn-lg px-4">Apply Now</button>
                </div>
            </div>
        </div>
    </section>

    <section id="jumbotron">
        <div class="container py-5">
            <div class="position-relative text-center rounded-5 jumbo-inner p-4">
                <h3 class="jumbo-text m-5">Think a world-class education is out of reach? Think again.</h3>
                <p class="col-lg-6 mx-auto mb-4">
                    Find the career thats best for you today!
                </p>
                <button class="btn btn-primary px-5 mb-5 hero-button" type="button">
                    View Opportunities
                </button>
            </div>
        </div>
    </section>

    <!--career-->
    <section>

        <div id="carouselExampleCaptions" class="carousel slide rounded" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/bachelors.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 style="text-shadow: 2px 2px 5px black; font-size: 3rem; font-weight: 600;">Undergraduate
                            Programs</h3>
                        <p class="fs-3" style="text-shadow: 2px 2px 5px black;">Explore our undergraduate major and
                            minor programs.<a href="/courses" class="btn btn-outline-light d-inline mx-3">Learn
                                More</a></p>

                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/assets/masters.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 style="text-shadow: 2px 2px 5px black; font-size: 3rem; font-weight: 600;">Graduate Programs
                        </h3>
                        <p class="fs-3" style="text-shadow: 2px 2px 5px black;">Advance your profession with graduate
                            programs for everyone.<a href="/courses" class="btn btn-outline-light d-inline mx-3">Learn
                                More</a></p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- <a href="/courses/new" class="btn btn-primary">New Course</a> -->
    </section>

    <section id="slogan">

        <div class="row align-items-center">
            <div class="col-10 col-sm-8 col-lg-6">
                <img src="/assets/slogan-img.jpg" class="d-block mx-lg-auto slogan-img" alt="Bootstrap Themes"
                    loading="lazy">
            </div>
            <div class="col-lg-6">
                <h1 class="career-text">The Orion Difference</h1>
                <p class="slogan-desc mt-3">We provide students with much more than just a single letter grade. Our
                    feedback
                    identifies strengths and targets areas for growth. Our learning approach is centered around the 8
                    Abilities â€“ what set our students and alums apart. These are the skills that will help you thrive
                    both personally and professionally.</p>
            </div>
        </div>
    </section>

    <section id="notice">
        <h2 class="pb-5 text-light">Notices And Events</h2>
        <!-- <a href="/notices/new" class="btn btn-success">New Article</a> -->
        <div class="row">

            <% notices.slice(0, 3).forEach(Article=> { %>
                <div class="col-lg-4 px-0 mb-3">
                    <div class="card m-2 h-100 d-flex flex-column shadow-lg">
                        <div class="card-body d-flex flex-column flex-grow-1">
                            <h5 class="card-title notice-title"
                                style="color: #0f81c7; font-size: 2.5rem; font-weight: 600;">
                                <%= Article.title %>
                            </h5>
                            <div class="card-subtitle text-muted mb-2">
                                <%= Article.createdAt.toLocaleDateString() %>
                            </div>
                            <p class="card-text notice-desc">
                                <%=Article.description %>
                            </p>
                            <a href="notices/<%= Article.slug %>" class="btn btn-primary mt-auto">Read More</a>
                            <!-- <form action="notices/<%= Article._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger mt-auto">Delete</button>
                            </form> -->
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </section>

    <section id="apply">
        <h1 class="apply-text">READY FOR WHAT'S NEXT</h1>
        <button type="button" class="hero-button btn btn-primary btn-lg">Apply Now</button>
    </section>
    
    <%- include('./footer.ejs') %>
    <!--footer ends here-->

    <!--must copy script, just copy paste in your html-->
    <!--bootstrap script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--custom script-->
    <script type="module" src="../dist/bundle.js"></script>

</body>

</html>