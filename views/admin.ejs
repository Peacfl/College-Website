<!DOCTYPE html>
<html lang="en">

<head>
    <!--head must remain the same, just copy the head-->

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap"
        rel="stylesheet">


    <!--bootstrap css-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!--custom css-->
    <link rel="stylesheet" href="home.css">

    <title>College</title>
</head>

<body>

    <!--header starts here-->
    <%- include('./header.ejs')%>
    <!--header ends here-->
    <section id="career">
        <div style="padding: 0 5%; color: #1b9eee;"
            class="d-flex align-items-center justify-content-between border-bottom mb-5">
            <h2 class="mb-4 pb-3 d-inline">Programs</h2>
            <a href="/courses/new" class="btn btn-outline-primary fs-5 mb-5">New Course</a>
        </div>

        <div class="container">
            <div class="accordion" id="accordionExample">
                <% course.forEach(Article=> { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fs-5 fw-bold" type="button"
                                data-bs-toggle="collapse" data-bs-target="#<%= Article.slug %>" aria-expanded="false"
                                aria-controls="collapseOne">
                                <%= Article.title %>
                            </button>
                        </h2>
                        <div id="<%= Article.slug %>" class="accordion-collapse collapse"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <%=Article.description %>
                                    <a href="courses/<%= Article.slug %>" class="btn btn-primary mt-auto ms-2">See
                                        Program</a>
                                    <form action="courses/<%= Article._id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger mt-auto">Delete</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

    
        </div>
    </section>
    <section id="notice">
        <div class="d-flex align-items-center justify-content-between border-bottom mb-5">
            <h2 class="pb-5 text-light d-inline">Notices And Events</h2>
            <a href="/notices/new" class="btn btn-outline-light fs-5 mb-4">New Article</a>
        </div>

        <div class="container">
            <div class="accordion " id="accordionExample">
                <% notices.forEach(Article=> { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fs-5 fw-bold" type="button"
                                data-bs-toggle="collapse" data-bs-target="#<%= Article.slug %>" aria-expanded="false"
                                aria-controls="collapseOne">
                                <%= Article.title %>
                            </button>
                        </h2>
                        <div id="<%= Article.slug %>" class="accordion-collapse collapse"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <%=Article.description %>
                                    <a href="notices/<%= Article.slug %>" class="btn btn-primary mt-auto ms-2">See
                                        Notice</a>
                                    <form action="notices/<%= Article._id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger mt-auto">Delete</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>


    </section>
    <!--footer starts here-->
    <%- include('./footer.ejs')%>
    <!--footer ends here-->

    <!--must copy script, just copy paste in your html-->
    <!--bootstrap script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--custom script-->
    <script type="module" src="../dist/bundle.js"></script>
    <script type="module" src="../autheticate.js"></script>

</body>

</html>